<section>
    <div class="">
        <div class="pt-5 p-5" style="float: left; width:'100%'">
            <div>
                <h3 class="" style="text-align: center;">CURRENT MOVIE</h3><hr>
                <div class="row">
                    <a href="/distributer/add-current" class="btn btn-success ml-auto">Add Current movie</a>
                </div>
            </div>
            <table class="table mt-3">
                <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">movieName</th>
                        <th scope="col">Language</th>
                        <th scope="col">showTime1</th>
                        <th scope="col">showTime2</th>
                        <th scope="col">showTime3</th>
                        <th scope="col">Discription</th>
                        <th scope="col">Duration</th>
                        <th scope="col">directorName</th>
                        <th scope="col">heroName</th>
                        <th scope="col">heroineName</th>
                        <th scope="col">Image</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each CurrentMovieData}}
                    <tr>
                        <th scope="row">1</th>
                        <td>{{this.movieName}}</td>
                        <td>{{this.Language}}</td>
                        <td>{{this.showTime1}}</td>
                        <td>{{this.showTime2}}</td>
                        <td>{{this.showTime3}}</td>
                        <td>{{this.Discription}}</td>
                        <td>{{this.Duration}}</td>
                        <td>{{this.directorName}}</td>
                        <td>{{this.heroName}}</td>
                        <td>{{this.heroineName}}</td>
                        <td><img style="width: 50px; height:'50px;'" src="/movie-images/{{this._id}}.jpg" alt=""></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>


        <div class="p-5" style="float: left; width:'100%'">
             <div>
                <h3 class="" style="text-align: center;">UPCOMMING MOVIE</h3><hr>
                <div class="row">
                    <a href="/distributer/add-upcomming" class="btn btn-success ml-auto">Add upcomming movie</a>
                </div>
            </div>
            <table class="table mt-3">
                <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">movieName</th>
                        <th scope="col">Language</th>
                        <th scope="col">Discription</th>
                        <th scope="col">Duration</th>
                        <th scope="col">directorName</th>
                        <th scope="col">heroName</th>
                        <th scope="col">heroineName</th>
                        <th scope="col">Image</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each UpcommingMovieData}}
                    <tr>
                        <th scope="row">1</th>
                        <td>{{this.UpcommingMovieName}}</td>
                        <td>{{this.UpcommingMovieLanguage}}</td>
                        <td>{{this.UpcommingMovieDescription}}</td>
                        <td>{{this.UpcommingMovieDuration}}</td>
                        <td>{{this.UpcommingMovieDirectorName}}</td>
                        <td>{{this.UpcommingMovieHeroName}}</td>
                        <td>{{this.UpcommingMovieHeroineName}}</td>
                        <td><img style="width: 50px; height:'50px;'" src="/upcomming-images/{{this._id}}.jpg" alt=""></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        </div>
    </div>
</section>